    title = {Distributed {kNN} Query Authentication},
    booktitle = {Proceedings of the 19th IEEE International Conference on Mobile Data Management (\textbf{MDM '18})},
    year = {2018},
    month = {6},
    address = {Aalborg, Denmark},
    pages = {167--176},
