@inproceedings{SIGMOD18:auth-access-control,
    author = {Xu, Cheng
              and Xu, Jianliang
              and Hu, Haibo
              and Au, Man Ho},
    author+an = {1=highlight},
    title = {When Query Authentication Meets Fine-Grained Access Control: A Zero-Knowledge Approach},
    booktitle = {Proceedings of the 2018 ACM SIGMOD International Conference on Management of Data (\textbf{SIGMOD '18})},
    year = {2018},
    month = {6},
    address = {Houston, TX, USA},
    pages = {147--162},
    doi = {10.1145/3183713.3183741},
