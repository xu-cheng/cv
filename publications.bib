    title = {{ImageProof}: Enabling Authentication for Large-Scale Image Retrieval},
    booktitle = {Proceedings of the 35th IEEE International Conference on Data Engineering (\textbf{ICDE '19})},
    year = {2019},
    month = {4},
    address = {Macau SAR, China},
    pages = {1070--1081},
    doi = {10.1109/ICDE.2019.00099},
